<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50sp"
        android:background="@color/blue_lite"
        android:id="@+id/relativeLayout">


        <ImageButton
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/back_bak"
            android:contentDescription="@null" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="输入编号"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"/>


    </RelativeLayout>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/book_id"
        android:hint="请输入编号"
        android:layout_above="@+id/confirm"
        android:layout_alignLeft="@+id/confirm"
        android:layout_alignStart="@+id/confirm"
        android:layout_alignRight="@+id/confirm"
        android:layout_alignEnd="@+id/confirm"
        android:gravity="center"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="确定"
        android:id="@+id/confirm"
        android:backgroundTint="@color/blue_lite"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />



</RelativeLayout>